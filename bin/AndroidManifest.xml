<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mj.childrensapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" /> 

    <application
        android:allowBackup="true"
        android:configChanges="keyboard|keyboardHidden|orientation"
        android:icon="@drawable/gamezookeep"
        android:label="@string/app_name"
        android:screenOrientation="landscape"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Tuturial"
            android:label="@string/title_activity_tuturial"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Game"
            android:label="@string/title_activity_game"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Tuturial2"
            android:label="@string/title_activity_tuturial2"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".MyZoo"
            android:label="@string/title_activity_my_zoo" >
        </activity>
    </application>

</manifest>