<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/home_backgroundfinal"
    android:layout_height="fill_parent" >

    <ImageButton
        android:id="@+id/tutbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/home_tutbuttonfinal" />

    <ImageButton
        android:id="@+id/myzoobutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tutbutton"
        android:layout_below="@+id/tutbutton"
        android:src="@drawable/home_myzoofinal" />

    <ImageButton
        android:id="@+id/playbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tutbutton"
        android:layout_alignLeft="@+id/tutbutton"
        android:src="@drawable/home_playbuttonfinal" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/home_keeperfinal" />

</RelativeLayout>