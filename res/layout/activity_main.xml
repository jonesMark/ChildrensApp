<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/mainbackgroundfinal"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/mainkeeperfinal" />

    <ImageButton
        android:id="@+id/tutbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/tutbuttonfinal" />

    <ImageButton
        android:id="@+id/myzoobutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tutbutton"
        android:layout_below="@+id/tutbutton"
        android:src="@drawable/myzoofinal" />

    <ImageButton
        android:id="@+id/playbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tutbutton"
        android:layout_alignLeft="@+id/tutbutton"
        android:src="@drawable/playbuttonfinal" />

</RelativeLayout>